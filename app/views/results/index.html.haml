- content_for :head do
  = stylesheet_link_tag 'compiled/results.css'

.results
  - @categories.each do |category|
    %h1= category[:description]
    %table
      %thead
        %tr
          %th.name
            Name
          %th.description
            Description
          %th.address
            Address
          %th.days_logged
            Days logged
          %th.email
            Email
          %th.username
            Username
          %th.parent
            Parent?
      %tbody
        - category[:results].each do |result|
          = render :partial => "result", :locals => { :mode => result[:name], :user => result[:user], :description => ("#{result[:user].trips.count} trips, #{result[:total_miles]} miles" unless result[:user].nil?) }
