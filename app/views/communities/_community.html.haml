- @community ||= current_user.community
- render :layout => 'shared/info' do
  %p You have joined this geographic community. This is your progress as a local community!

.in-page-badges= render :partial => 'shared/community_badges', :locals => {:community => @community}

%h3= "Community: Challenge for #{@community.name.camelcase}"
= render :partial => 'shared/leaderboard_filter_form'

= render :partial => 'shared/leaderboard', :locals => { :items => @community_members_leaderboard, :group => false, :friendship => false }

= link_to 'Show All Communities', communities_url, :class => 'button'
