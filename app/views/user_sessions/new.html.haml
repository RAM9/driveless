- title "Join the challenge"

- form_for @user_session do |f|
  = f.error_messages
  %h2
    Login using
    %a{:class => 'button activate-section', :href => '#auth-openid'} Open ID
    or
    %a{:class => 'button inactive activate-section', :href => '#auth-password'} Username & Password

  .auth
    .password{:style => "display: none"}
      %p
        = f.label :username
        %br
        = f.text_field :username

      %p
        = f.label :password
        %br
        = f.password_field :password
      = link_to 'Forgot your password?', password_resets_url
    .openid
      %p
        = f.label :openid_identifier, "OpenID URL"
        %br
        = f.text_field :openid_identifier

  %p
    = f.submit "Submit"
