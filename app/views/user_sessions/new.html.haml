- title "Login"
/ = authlogic_facebook_login_button
- form_for @user_session do |f|
  = f.error_messages
  %h2
    Login using your
    %a{:class => 'button activate-section', :href => '#auth-password'} Username & Password
    or
    %a{:class => 'button inactive activate-section', :href => '#auth-open_id'} Open ID

  .auth
    .password
      %p
        = f.label :username
        %br
        = f.text_field :username

      %p
        = f.label :password
        %br
        = f.password_field :password
        = link_to 'Forgot your password?', password_resets_url, :class => 'button small'
      %p
        = f.submit "Login"
    .open_id{:style => "display: none"}
      = render :partial => 'shared/openid_identifier', :locals => {:submit_button_label => "Login", :model => "user_session"}

- render :layout => 'shared/tip' do
  %p
    Don't have an account?
    = link_to "Signup!", register_path, :class => 'button'
