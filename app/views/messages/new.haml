- title 'New Message'

%h1 New Message
= flash[:notice]
.messages-menu= rezm_menu
%p
= error_messages_for 'message'
%fieldset
  %legend Send Message
  - form_for @message do |form|
    %p
      %label{ :for => "message_recepient" }Recipient:
      %br/
      =# form.text_field :recipient, :size => 40, :value => @message.recipient
      = text_field_with_auto_complete :user, :username, :value =>  @message.recipient, :size => 40
    %p
      %label{ :for => "message_subject" }Subject:
      %br/
      = form.text_field :subject, :size => 40
    %p
      %label{ :for => "message_body" }Message:
      %br/
      = form.text_area :body
    = submit_tag "Send Message"
